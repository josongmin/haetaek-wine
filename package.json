{
  "name": "admin-api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": ["shared", "server", "client"],
  "main": "index.js",
  "scripts": {
    "dev": "npm run start --workspace=server",
    "start:server": "npm run start --workspace=server",
    "start:client": "npm run start --workspace=client",
    "build": "npm run build:client",
    "build:client": "npm -w client ci && npm -w client run build",
    "deploy": "pm2 stop admin-api || true && npm ci --ignore-scripts && npm run build:client && pm2 start admin-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.9.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}