{
  "name": "@myorg/server",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx index.ts",
    "dev:restart": "lsof -ti:4000 | xargs kill -9 2>/dev/null || true; sleep 1; pnpm dev",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:restart": "lsof -ti:4000 | xargs kill -9 2>/dev/null || true; sleep 1; pnpm start",
    "type-check": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "engines": {
    "node": ">=20.x"
  },
  "dependencies": {
    "@myorg/shared": "file:../shared",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "firebase-admin": "13.4.0",
    "moment": "2.30.1",
    "mysql2": "3.9.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
